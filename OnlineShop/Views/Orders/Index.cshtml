@model IEnumerable<Shop.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.ShippingDate)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>@Html.DisplayNameFor(model => model.LastEditted)</th>
            <th>@Html.DisplayNameFor(model => model.Courier)</th>
            <th>@Html.DisplayNameFor(model => model.Customer)</th>
            <th>@Html.DisplayNameFor(model => model.DiscountCode)</th>
            <th>@Html.DisplayNameFor(model => model.Payment)</th>
            <th>@Html.DisplayNameFor(model => model.ShippingAddress)</th>
            <th>Products</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ShippingDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.LastEditted)</td>
                <td>@Html.DisplayFor(modelItem => item.Courier.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Customer.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.DiscountCode)</td>
                <td>@Html.DisplayFor(modelItem => item.Payment.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.ShippingAddress.Street)</td>
                <td>
                    <ul>
                        @foreach (var product in item.OrderProducts)
                        {
                            <li>@product.Product.Name (Quantity: @product.Quantity)</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
